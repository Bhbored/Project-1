<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Project_1.Resources.Styles.CollectionViewStyles">


    <Style x:Key="InventoryCollectionView" TargetType="CollectionView">
        <Setter Property="Margin" Value="8"/>
        <Setter Property="SelectionMode" Value="None"/>
        <Setter Property="ItemsLayout">
            <Setter.Value>
                <GridItemsLayout Orientation="Vertical" Span="2" VerticalItemSpacing="8" HorizontalItemSpacing="8"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>